#! /bin/bash

if [[ ! -d $HOME/NIMPA ]]; then
    git clone https://github.com/jjleewustledu/NIMPA.git
fi
if [[ ! -d $HOME/NIMPA ]]; then
    git clone https://github.com/jjleewustledu/NIPET.gitfi
fi
if [[ ! -d $HOME/NIMPA ]]; then
    git clone https://github.com/jjleewustledu/NiftyPETy.git
fi

pushd $HOME/NIMPA && \
touch install_nimpa.log && \
pip install --no-binary :all: --verbose -e . > install_nimpa.log && \
popd
pushd $HOME/NIPET && \
touch install_nipet.log && \
pip install --no-binary :all: --verbose -e . > install_nipet.log && \
popd
pushd $HOME/NiftyPETy && \
touch install_niftypety.log && \
pip install --no-binary :all: --verbose -e . > install_niftypety.log && \
popd    

